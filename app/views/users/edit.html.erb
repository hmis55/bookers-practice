<div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5  mx-auto">
        <h2>Userinfo</h2>
        <%= form_with model: @user do |f| %>
       
       <label for="inputname">Name</label><br>
       <div class= "name">
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
       </div>
        <div class= "file">
           <label for="inputImage">image</label><br>
 　　　     <%= f.file_field :profile_image, Image: "プロフィール画像", accept:"image/*" %><br>
       </div>
       
        <label for="inputName">Introduction</label><b>
         <div class=" introduction">  
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%><br>
        </div>
        
        <div>
          <%= f.submit "Update User" ,class:"btn-secondary"%>
        </div>
        <% end %>
      </div>
   </div>
</div>