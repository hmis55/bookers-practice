<h2>Userinfo</h2>
<%= form_with model: @user do |f| %>
<div>
   <label for="inputName">Name</label>
</div>  
<div>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
</div>   
<div>
   <label for="inputImage">image</label>
</div>
<div>
   <%= f.file_field :profile_image, Image: "プロフィール画像", accept:"image/*" %>
</div>  
<div>
   <label for="inputName">Introduction</label>
</div>  
<div>
   <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
</div>  
   <%= f.submit "変更を保存" %>
<% end %>