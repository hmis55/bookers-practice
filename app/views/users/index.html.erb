<!--部分テンプレート-->
<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
       <%= render 'books/book', book: @book,user: @user%>
     </div>
<!--Users の一覧部分-->

  <div class='col-md-8 offset-md-1'>
    <h2>Users</h2>
      <table class='table table-hover table-inverse'>
          <thead>
           <tr>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
           </tr>
          </thead>
  <!--ユーザー画像、名前、リンクの表示 -->

         <% @users.each do |user| %>
          <tr>
           <td><%= image_tag user.get_profile_image(100,100) %></td>
           <td><%= user.name %></td>
           <td><%= link_to "Show", user_path(user.id) %> </td>
          </tr>
         <% end %>
       <tbody></tbody>
      </table>
    </div>
   </div>
  </div>
