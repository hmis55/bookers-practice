<!--部分テンプレート-->
<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
      <%= render 'books/book', book: @book,user: @user%>
     </div>

<!-- userの登録履歴-->
     <div class='col-md-8 offset-md-1'>
       <h2>Books</h2>
         <table class='table table-hover table-inverse'>
           <thead>
            <tr>
            <th></th>
            <th>title</th>
            <th>Opinion</th>
            <th colspan ="3"></th>
            </tr>
           </thead>
           <tbody>
            <% @books.each do |book| %>
             <tr>
              <td><%= image_tag book.user.get_profile_image(100,100)%><br><%= link_to @user.name, user_path(@user) %></td></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <th></th>
             </tr>
            <% end %>
           </tbody>
          </table>
     </div>
   </div>
</div>