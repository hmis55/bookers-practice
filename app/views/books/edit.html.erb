<h1>Editing Book</h1>

    <% if @book.errors.any? %>
     <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
   <%end%>

<div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5  mx-auto">
       <%= form_with model: @book do |f| %>
       <label for="book title">Title</label><br>
       <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%><br>

       <label for="book opinion">Opinion</label><br>
       <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"情報"%><br>
       <div></div>
       <%= f.submit "Update Book" ,class:"btn-success"%><br>

        <%= link_to "Show", book_path(@book) %>
        "|"
        <%= link_to "Back", books_path %>
       <% end %>
    </div>
  </div>
</div>