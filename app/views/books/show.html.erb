<!--部分テンプレート-->
<div class="container px-5 px-sm-0">
 <div class="row">
     <div class="col-md-3">
      <%= render 'book', book: @book_new,user: @user%>
     </div>

  <!-- book detail -->
  <div class='col-md-8 offset-md-1'>
   <h2>Book detail</h2>
    <table class='table table-hover table-inverse'>
      <tbody>
       <td><%= link_to image_tag(@user.get_profile_image(100,100)),user_path(@user)%>
       <br><%= link_to@user.name, user_path(@user) %></td>
       <td><%= link_to@book.title,book_path(@book) %></td>
       <td><%= @book.body %></td>
         <% if @user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@book) %> </td>
       <% end %>
       <% if @user == current_user %>
         <td><%= link_to "Destroy",book_path(@book), method: :delete %></td>
       <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>