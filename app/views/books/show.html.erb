<!--New bookの入力部分 -->
  <h2>new book</h2>
  <%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <table>Opinion</table>
  <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
  <% end %>

  <!-- book drtsil -->
  <h2>Book detail</h2>
  <table>
    <tbody>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= @user.name %></td>
      <td><%= link_to "Edit", edit_book_path(@book) %> </td>
      <td><%= link_to "Destroy",book_path(@book), method: :delete %></td>
    </tbody>
  </table>