<main>
<h2>User info </h2>

<!--User infoの表示部分 -->
<table>
 <tbody>
   <tr><th><%= image_tag @user.get_profile_image(100,100) %></th></tr>
   <tr>
   <th>name</th>
   <th><%= @user.name %></th>
   <tr/>
   <tr>
   <th>introduction</th>
   <th><%= @user.introduction %></th>
   <tr/>
   <tr>
    <th>
     <%= link_to "edit", edit_user_path(@user) %>
    </th>
   </tr>
 </tbody>
</table>

<!--New bookの入力部分 -->
  <h2>new book</h2>
  <%= form_with model: @book do |f| %><br>
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <table>Opinion</table><br>
  <%= f.text_field :opinion %><br>
  <%= f.submit 'Create Book' %><br>
  <% end %>

  <!-- book detail -->
  <h2>Book detail</h2>
  <table>
    <tbody>
      <td><%= link_to image_tag(@user.get_profile_image(100,100)),user_path(@user)%></td>
      <td><%= link_to@user.name, user_path(@user) %></td>
      <td><%= link_to@book.title,book_path(@book) %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@book) %> </td>
      <% end %>
      <% if @user == current_user %>
        <td><%= link_to "Destroy",book_path(@book), method: :delete %></td>
      <% end %>
    </tbody>
  </table>