<main>
<h2>User info </h2>

<!--User infoの表示部分 -->
<table>
 <tbody>
   <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
   <th>name</th>
   <th><%= @user.name %></th>
   <tr/>
   <th>introduction</th>
   <th><%= @user.introduction %></th>
   <tr/>
 </tbody>
</table>

<!--New bookの入力部分 -->
  <h2>new book</h2>
  <%= form_with model: @book do |f| %><br>
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <table>Opinion</table><br>
  <%= f.text_field :opinion %><br>
  <%= f.submit 'Create Book' %><br>
  <% end %>

  <!-- book drtsil -->
  <h2>Book detail</h2>
  <table>
    <tbody>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= link_to @user.name, user_path(@user) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book) %> </td>
      <td><%= link_to "Destroy",book_path(@book), method: :delete %></td>
    </tbody>
  </table>